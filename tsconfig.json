{
    "compilerOptions": {
        "module": "ES2022",
        "moduleResolution": "node",
        "rootDir": "src/components",
        "outDir": "lib/",
        "allowJs": true,
        "target": "es2021",
        "strict": true,
        "jsx": "preserve",
        "jsxImportSource": "preact",
        "noImplicitAny": true,
        "typeRoots": ["node_modules/@types"],
        "baseUrl": "./"
    },
    "include": ["./src/components/**/*", "./src/components/@types"]
}
